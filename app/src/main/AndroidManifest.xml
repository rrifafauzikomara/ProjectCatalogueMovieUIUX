<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rifafauzi6.projectcataloguemovieuiux">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.DetailMovieActivity" />
        <activity android:name=".view.category.MostPopularActivity"
            android:label="Most Popular Movies"/>
        <activity android:name=".view.category.TopRatedActivity"
            android:label="Top Rated Movies"/>
        <activity android:name=".view.category.NowPlayingActivity"
            android:label="Now Playing Movies"/>
        <activity android:name=".view.category.UpComingActivity"
            android:label="Up Coming Movies"/>
    </application>

</manifest>